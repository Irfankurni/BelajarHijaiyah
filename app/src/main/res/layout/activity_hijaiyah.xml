<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".BelajarActivity">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:scrollbarSize="0dp"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbarStyle="insideOverlay"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/alif"
                android:layout_gravity="center"
                android:background="@drawable/aa_alif"
                android:clickable="true"
                android:focusable="true"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/ba"
                android:layout_gravity="center"
                android:background="@drawable/aa_ba" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/ta"
                android:layout_gravity="center"
                android:background="@drawable/aa_ta" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/tsa"
                android:layout_gravity="center"
                android:background="@drawable/aa_tsa" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/ja"
                android:layout_gravity="center"
                android:background="@drawable/aa_ja"
                android:clickable="true"
                android:focusable="true"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/ha"
                android:layout_gravity="center"
                android:background="@drawable/aa_ha" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/kha"
                android:layout_gravity="center"
                android:background="@drawable/aa_kha"
                android:clickable="true"
                android:focusable="true"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/da"
                android:layout_gravity="center"
                android:background="@drawable/aa_da" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/dza"
                android:layout_gravity="center"
                android:background="@drawable/aa_dza"
                android:clickable="true"
                android:focusable="true"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/ro"
                android:layout_gravity="center"
                android:background="@drawable/aa_ro"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/za"
                android:layout_gravity="center"
                android:background="@drawable/aa_za"
                android:clickable="true"
                android:focusable="true"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/sin"
                android:layout_gravity="center"
                android:background="@drawable/aa_sin"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/syin"
                android:layout_gravity="center"
                android:background="@drawable/aa_syin"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/sod"
                android:layout_gravity="center"
                android:background="@drawable/aa_sod"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/dho"
                android:layout_gravity="center"
                android:background="@drawable/aa_do"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/tho"
                android:layout_gravity="center"
                android:background="@drawable/aa_tho"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/dod"
                android:layout_gravity="center"
                android:background="@drawable/aa_dho"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/ain"
                android:layout_gravity="center"
                android:background="@drawable/aa_ain"/>
