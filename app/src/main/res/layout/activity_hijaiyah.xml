                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/ghain"
                android:layout_gravity="center"
                android:background="@drawable/aa_ghain"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/fa"
                android:layout_gravity="center"
                android:background="@drawable/aa_fa"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/kof"
                android:layout_gravity="center"
                android:background="@drawable/aa_kof"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/ka"
                android:layout_gravity="center"
                android:background="@drawable/aa_ka"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/lam"
                android:layout_gravity="center"
                android:background="@drawable/aa_lam"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/mim"
                android:layout_gravity="center"
                android:background="@drawable/aa_mim"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/nun"
                android:layout_gravity="center"
                android:background="@drawable/aa_nun"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/wau"
                android:layout_gravity="center"
                android:background="@drawable/aa_wau"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_marginBottom="5dp"
