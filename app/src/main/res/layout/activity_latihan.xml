<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".KuisActivity">

    <ImageButton
        android:id="@+id/exit8"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/kembali"
        />
    <LinearLayout
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        >
        <ImageButton
            android:id="@+id/kuis_hijaiyah"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:background="@drawable/kuis_hijaiyah"/>
        <ImageButton
            android:id="@+id/kuis_fathah"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:background="@drawable/kuis_fathah"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
        <ImageButton
            android:id="@+id/kuis_kasroh"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:background="@drawable/kuis_kasroh"
            android:layout_marginEnd="30dp"/>
        <ImageButton
            android:id="@+id/kuis_domah"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:background="@drawable/kuis_dhomah"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/a"
        android:layout_marginTop="25dp"
        >
        <ImageButton
            android:id="@+id/kuis_fathah_tain"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:background="@drawable/kuis_fathahtain"/>
        <ImageButton
            android:id="@+id/kuis_kasroh_tain"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:background="@drawable/kuis_kasrohtain"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
        <ImageButton
            android:id="@+id/kuis_domah_tain"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:background="@drawable/kuis_dhomahtain"
            android:layout_marginEnd="30dp"/>
    </LinearLayout>

</RelativeLayout>