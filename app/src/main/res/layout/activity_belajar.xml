<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".BelajarActivity">
    <ImageButton
        android:id="@+id/kembali"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/kembali"
        android:clickable="true"
        android:focusable="true"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/menu_hijaiyah"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:background="@drawable/belajar_hijaiyah"
                android:clickable="true"
                android:focusable="true"/>

            <ImageButton
                android:id="@+id/menu_fathah"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:background="@drawable/belajar_fathah"
                android:clickable="true"
                android:focusable="true"/>

            <ImageButton
                android:id="@+id/menu_kasroh"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:background="@drawable/belajar_kasroh"
                android:clickable="true"
                android:focusable="true"/>
            <ImageButton
                android:id="@+id/menu_dhomah"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:background="@drawable/belajar_dhomah"
                android:clickable="true"
                android:focusable="true"/>
            <ImageButton
                android:id="@+id/menu_tanwin1"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:background="@drawable/belajar_fathahtain"
                android:clickable="true"
                android:focusable="true"/>
            <ImageButton
                android:id="@+id/menu_tanwin2"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:background="@drawable/belajar_kasrohtain"
                android:clickable="true"
                android:focusable="true"/>
            <ImageButton
                android:id="@+id/menu_tanwin3"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:background="@drawable/belajar_dhomahtain"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

    </HorizontalScrollView>



</RelativeLayout>