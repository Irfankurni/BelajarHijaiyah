<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
				android:startColor="#616161"
                android:centerColor="#757575"
                android:centerY="1.0"
                android:endColor="#424242"
                android:angle="270"/>
				
			<corners android:radius="6dp"/>

        </shape>
    </item>


    <item android:id="@android:id/progress">
        <clip>
			<layer-list>
				<item android:bottom="2dp"
					android:left="2dp"
					android:top="2dp"
					android:right="2dp">
						<shape>
							<gradient
								android:startColor="#048AAC"
								android:centerColor="#048AAC"
								android:centerY="1.0"
								android:endColor="#08B5E1"
								android:angle="270"/>
							
							<corners android:radius="4dp"/>

						</shape>
				</item>
			</layer-list>
        </clip>
    </item>

</layer-list>